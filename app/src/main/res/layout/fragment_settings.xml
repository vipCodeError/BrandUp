<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--   Business Details     -->
        <LinearLayout
            android:background="@drawable/rounded_selection_home"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/buss_name"
                android:fontFamily="@font/archia"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/buss_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/archia"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone_no"
                android:fontFamily="@font/archia"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/plan_type"
                android:fontFamily="@font/archia"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/banner_ads_sett"
            android:layout_marginTop="32dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <!--   Setting   -->
        <LinearLayout
            android:id="@+id/my_b_layout"
            android:padding="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/briefcase"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/my_business_set"
                android:text="My Business"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/archia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:id="@+id/edit_b_layout"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/editor"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/upgrade_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/archia"
                android:text="Upgrade Plan"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:id="@+id/pref_lan_layout"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/language"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/preferred_language_txt"
                android:text="Preferred Language"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/archia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="0.1dp"/>



        <LinearLayout
            android:id="@+id/help_and_support_layout"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/briefcase"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/help_and_support"
                android:text="Help and Support"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/archia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:id="@+id/faq"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/question"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/faq_txt"
                android:text="faq"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/archia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:id="@+id/privacy_and_policy"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/insurance"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/policy_txt"
                android:text="Privacy and Policy"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/archia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:id="@+id/share"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/collaboration"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/share_txt"
                android:text="Share App"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/archia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="0.1dp"/>

        <TextView
            android:id="@+id/logout_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ptsans_bold"
            android:padding="8dp"
            android:text="Logout"
            android:textColor="#C2185B"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:text="App V. 0.1"
            android:fontFamily="@font/archia"
            android:textStyle="bold"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:textColor="#484849"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>