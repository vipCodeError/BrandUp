<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--   Business Details     -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Furniture Baba"
                android:fontFamily="@font/archia"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Furniture"
                android:fontFamily="@font/ptsans_bold"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="+91 8754254125"
                android:fontFamily="@font/ptsans_bold"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!--   Setting   -->
        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/briefcase"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="My Business"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ptsans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/editor"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Edit Your Brand Name"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ptsans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/language"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Preferred Language"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ptsans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>


        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/briefcase"
                android:layout_marginStart="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Help and Support"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ptsans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>
    </LinearLayout>
</ScrollView>