<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/popular_cat_layout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="8dp"
    android:layout_width="120dp"
    android:layout_height="150dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:src="@drawable/creative_power"
        android:layout_margin="16dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#777777"/>

    <TextView
        android:id="@+id/popular_cat_title"
        android:text="Marketing and Advetising agency"
        android:fontFamily="@font/ptsans_regular"
        android:textStyle="bold"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>